<!-- 				</executions> -->
			</plugin>
		</plugins>
	</build>
	<dependencies>
		<dependency>
			<groupId>org.openjfx</groupId>
			<artifactId>javafx-base-jmod</artifactId>
			<version>12-ea+6</version>
			<classifier>linux</classifier> 
			<type>jmod</type>
		</dependency>
		<dependency>
			<groupId>org.openjfx</groupId>
			<artifactId>javafx-controls-jmod</artifactId>
			<version>12-ea+6</version>
			<classifier>linux</classifier> 
			<type>jmod</type>
		</dependency>
		<dependency>
			<groupId>org.openjfx</groupId>
			<artifactId>javafx-graphics-jmod</artifactId>
			<version>12-ea+6</version>
			<classifier>linux</classifier> 
